@model WebApplicationCRUD.Models.Seller

@{
    ViewData["Title"] = "Exclusão";
}

<h1>@ViewData["Title"]</h1>
<hr />
<h4>Você realmente deseja excuir este vendedor?</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.birthDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.birthDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.baseSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.baseSalary)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
    </form>
    <br />
    <div>
        <a asp-action="Index">Retornar para a lista</a>
    </div>
</div>
